{
  "manifest_version": 3,
  "name": "CopyStack - Clipboard History",
  "version": "1.0.0",
  "description": "Track and manage your clipboard history with advanced pro features",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CopyStack - Clipboard History"
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}